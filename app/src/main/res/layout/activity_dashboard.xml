<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/main_layers"
    android:layout_height="match_parent"

    tools:context="com.adamlbs.reportaggression.DashboardActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="30dp"

        tools:context="com.adamlbs.reportaggression.DashboardActivity">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/layout_maginTop"
            android:layout_marginBottom="@dimen/layout_marginBottom"
            android:src="@drawable/ar_logo_blue" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/layout_marseille_top"

            android:src="@drawable/title" />

        <ImageButton
            android:id="@+id/btnMetro"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:src="@drawable/metro"
            android:text="@string/metro"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/btnBus"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:background="@null"

            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/bus"
            android:text="@string/metro"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/btnNightBus"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:background="@null"
            android:layout_marginTop="10dp"

            android:scaleType="fitCenter"
            android:src="@drawable/bus_n"
            android:layout_gravity="center"

            android:text="@string/metro"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/btnTram"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"

            android:scaleType="fitCenter"
            android:src="@drawable/tram"
            android:layout_marginBottom="50dp"
            android:text="@string/metro"
            android:textColor="@android:color/white" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

