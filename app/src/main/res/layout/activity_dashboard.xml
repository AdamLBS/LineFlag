<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adamlbs.reportaggression.DashboardActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:theme="@style/AppTheme.AppBarOverlay">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:scaleType="fitCenter"

            android:src="@drawable/marseille">


        </ImageView>

        <TextView
            android:id="@+id/welcomeText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            android:text="Veuillez sÃ©lectionner un type de ligne"
            android:textSize="20sp" />
    </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_navigation_menu"
            app:itemBackground="@color/background"
            app:itemIconTint="@color/background"
            app:itemTextColor="@color/background" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="50dp"
        tools:context="com.adamlbs.reportaggression.DashboardActivity">
        <ImageButton
            android:id="@+id/btnMetro"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:background="@null"
            android:scaleType="fitCenter"

            android:src="@drawable/metro"
            android:text="@string/metro"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/btnBus"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:background="@null"
            android:scaleType="fitCenter"

            android:src="@drawable/bus"
            android:text="@string/metro"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/btnNightBus"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:background="@null"
            android:scaleType="fitCenter"

            android:src="@drawable/bus_nocturnes"
            android:text="@string/metro"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/btnTram"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:background="@null"
            android:scaleType="fitCenter"

            android:src="@drawable/tramway"
            android:text="@string/metro"
            android:textColor="@android:color/white" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

