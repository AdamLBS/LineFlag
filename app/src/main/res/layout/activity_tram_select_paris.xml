<androidx.coordinatorlayout.widget.CoordinatorLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/main_layers"
    android:layout_height="match_parent"
    tools:context="com.adamlbs.reportaggression.RerSelectParis">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@null" >
        <ImageView
            android:id="@+id/logo"
            android:layout_marginTop="30dp"

            android:contentDescription="image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:src="@drawable/if_logo_bleu"
            />

        <ImageButton
            android:id="@+id/btnM2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:scaleType="fitXY"

            android:src="@drawable/m2"
            android:text="@string/metro"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <View
            android:id="@+id/view"
            android:layout_height="1dp"
            android:layout_width="0dp"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/metro_title">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:src="@drawable/tram_title" />

        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/tp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tram_1"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:foregroundGravity="center"
                android:text="Allow"/>
            <ImageButton
                android:id="@+id/tp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/tp1"
                android:src="@drawable/tram_2"
                android:background="@android:color/transparent"
                android:layout_alignTop="@id/tp1"
                android:text="Deny"/>
            <ImageButton
                android:id="@+id/tp3a"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/tp2"
                android:src="@drawable/tram_3a"
                android:background="@android:color/transparent"
                android:layout_alignTop="@id/tp2"
                android:text="Deny"/>
            <ImageButton
                android:id="@+id/tp3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/tp3a"
                android:src="@drawable/tram_3b"
                android:background="@android:color/transparent"
                android:layout_alignTop="@id/tp3a"
                android:text="Deny"/>
        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/tp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tram_4"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:foregroundGravity="center"
                android:text="Allow"/>
            <ImageButton
                android:id="@+id/tp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/tp4"
                android:src="@drawable/tram_5"
                android:background="@android:color/transparent"
                android:layout_alignTop="@id/tp4"
                android:text="Deny"/>
            <ImageButton
                android:id="@+id/tp6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/tp5"
                android:src="@drawable/tram_6"
                android:background="@android:color/transparent"
                android:layout_alignTop="@id/tp5"
                android:text="Deny"/>
            <ImageButton
                android:id="@+id/tp7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/tp6"
                android:src="@drawable/tram_7"
                android:background="@android:color/transparent"
                android:layout_alignTop="@id/tp6"
                android:text="Deny"/>

        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/tp8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"

                android:src="@drawable/tram_8"
                android:background="@android:color/transparent"
                android:text="Deny"/>

            <ImageButton
                android:id="@+id/tp11"
                android:layout_toRightOf="@id/tp8"
                android:layout_alignTop="@id/tp8"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tram_11_express"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:foregroundGravity="center"
                android:text="Allow"/>

        </RelativeLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>