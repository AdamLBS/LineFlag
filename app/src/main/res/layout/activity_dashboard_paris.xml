<androidx.coordinatorlayout.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/main_layers"

    android:layout_height="match_parent"

    tools:context="com.adamlbs.reportaggression.DashboardParis">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@null" >
        <ImageView
            android:id="@+id/logo"
            android:layout_marginTop="30dp"
            android:contentDescription="image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:src="@drawable/if_logo_bleu"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="0dp"

        tools:context="com.adamlbs.reportaggression.DashboardParis">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/title">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:src="@drawable/title_paris" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/btnMetro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/metro"
            android:text="@string/metro"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/btnTransilien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/transilien"
            android:text="@string/metro"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/btnRER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/rer"

            android:text="@string/metro"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/btnTram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"

            android:scaleType="fitCenter"
            android:src="@drawable/tram"
            android:text="@string/metro"
            android:textColor="@android:color/white" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

