<androidx.coordinatorlayout.widget.CoordinatorLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/main_layers"
    android:layout_height="match_parent"
    tools:context="com.adamlbs.reportaggression.TransilienParis">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@null" >
        <ImageView
            android:id="@+id/logo"
            android:layout_marginTop="30dp"

            android:contentDescription="image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:src="@drawable/if_logo_bleu"
            />

        <ImageButton
            android:id="@+id/btnM2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:scaleType="fitXY"

            android:src="@drawable/m2"
            android:text="@string/metro"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <View
            android:id="@+id/view"
            android:layout_height="1dp"
            android:layout_width="0dp"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/metro_title">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:src="@drawable/transilien_title" />

        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/transH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/transilien_h"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:foregroundGravity="center"
                android:text="Allow"/>
            <ImageButton
                android:id="@+id/transJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/transH"
                android:src="@drawable/transilien_j"
                android:background="@android:color/transparent"
                android:layout_alignTop="@id/transH"
                android:text="Deny"/>
            <ImageButton
                android:id="@+id/transK"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/transJ"
                android:src="@drawable/transilien_k"
                android:background="@android:color/transparent"
                android:layout_alignTop="@id/transJ"
                android:text="Deny"/>
            <ImageButton
                android:id="@+id/transL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/transK"
                android:src="@drawable/transilien_l"
                android:background="@android:color/transparent"
                android:layout_alignTop="@id/transK"
                android:text="Deny"/>
        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/transN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/transilien_n"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:foregroundGravity="center"
                android:text="Allow"/>
            <ImageButton
                android:id="@+id/transP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/transN"
                android:src="@drawable/transilien_p"
                android:background="@android:color/transparent"
                android:layout_alignTop="@id/transN"
                android:text="Deny"/>
            <ImageButton
                android:id="@+id/transR"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/transP"
                android:src="@drawable/transilien_r"
                android:background="@android:color/transparent"
                android:layout_alignTop="@id/transP"
                android:text="Deny"/>
            <ImageButton
                android:id="@+id/transU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/transR"
                android:src="@drawable/transilien_u"
                android:background="@android:color/transparent"
                android:layout_alignTop="@id/transR"
                android:text="Deny"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>